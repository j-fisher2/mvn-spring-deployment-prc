pipeline {
    agent any
    
    environment {
        PROJECT = "graceful-album-415815"
        APP_NAME = "binarycalculator"
        IMAGE_TAG = "gcr.io/${PROJECT}/${APP_NAME}"
        CREDENTIALS_ID = "gcp_token" // This should be the ID of the Jenkins credentials containing your Google Cloud service account key
    }

    tools {
        // Define Maven tool
        maven 'maven'
    }

    stages {
        stage('Checkout') {
            steps {
                // Check out the source code from Git repository
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Build the Maven project
                sh 'mvn package -DskipTests -f ./Webapp/pom.xml'
            }
        }

        stage('Install Docker') {
            steps {
                script {
                    sh 'sudo apt-get update'
                    sh 'sudo apt-get install -y docker.io'
                    sh 'sudo systemctl start docker'
                    sh 'sudo systemctl enable docker'
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    docker.build(IMAGE_TAG, ".")
                }
                script {
                    docker.withRegistry('https://gcr.io', CREDENTIALS_ID) {
                        docker.image(IMAGE_TAG).push()
                    }
                }
            }
        }
    }
}
