pipeline {
    agent any
    
    environment {
        PROJECT = "graceful-album-415815"
        REPO_PATH = "gcr.io/${PROJECT}/binarycalculator"
        CREDENTIALS_ID = "gcp_token" 
    }

    tools {
        // Define Maven tool
        maven 'maven'
    }

    stages {
        stage('Checkout') {
            steps {
                // Check out the source code from Git repository
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Build the Maven project
                sh 'mvn package -DskipTests -f ./Webapp/pom.xml'
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                // Build Docker image
                sh "docker build -t ${REPO_PATH} ."
                
                // Push Docker image to Artifact Registry
                sh "docker push ${REPO_PATH}"
            }
        }
    }
}

