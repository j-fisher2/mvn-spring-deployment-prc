pipeline {
    agent any
    
    environment {
        PROJECT = "graceful-album-415815"
        APP_NAME = "binarycalculator"
        IMAGE_TAG = "gcr.io/${PROJECT}/${APP_NAME}"
        CREDENTIALS_ID = "gcp_token" 
    }

    tools {
        // Define Maven tool
        maven 'maven'
    }

    stages {
        stage('Checkout') {
            steps {
                // Check out the source code from Git repository
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Build the Maven project
                sh 'mvn package -DskipTests -f ./Webapp/pom.xml'
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    def dockerImageTag = IMAGE_TAG
                    docker.build(dockerImageTag, "-f Dockerfile .")
                    docker.withRegistry('https://us-docker.pkg.dev', 'pp1') {
                        docker.image(dockerImageTag).push()
                    }
                }
            }
        }
    }
}
